{
  "anti_flailing_config": {
    "version": "1.0.0",
    "description": "Anti-Flailing System configuration for preventing reactive capability expansion",
    "flailing_thresholds": {
      "consecutive_expansions": 3,
      "expansion_frequency_per_hour": 2.0,
      "integration_failure_rate": 0.3,
      "decision_reversal_rate": 0.2,
      "capability_utilization_threshold": 0.7
    },
    "mandatory_gates": [
      "knowledge_gap_analysis",
      "alternative_exploration",
      "integration_planning", 
      "risk_assessment"
    ],
    "gate_requirements": {
      "knowledge_gap_analysis": {
        "required": true,
        "min_alternatives_identified": 2,
        "max_gap_severity_without_justification": 0.6
      },
      "alternative_exploration": {
        "required": true,
        "min_alternatives_explored": 1,
        "enhancement_alternatives_preferred": true
      },
      "integration_planning": {
        "required_for": ["controlled_addition", "emergency_expansion"],
        "must_include": ["rollback_plan", "monitoring_strategy", "resource_requirements"]
      },
      "risk_assessment": {
        "required_for": ["controlled_addition", "emergency_expansion"],
        "must_include": ["security_impact", "performance_impact", "maintenance_burden"]
      }
    },
    "cooling_periods": {
      "after_rejection": 3600,
      "after_emergency": 7200,
      "after_critical_flailing": 86400,
      "between_expansion_requests": 300
    },
    "enhancement_thresholds": {
      "min_enhancement_potential": 0.6,
      "max_gap_severity_for_enhancement": 0.8,
      "prefer_enhancement_over_expansion": true
    },
    "decision_weights": {
      "gap_severity": 0.3,
      "enhancement_potential": 0.25,
      "integration_complexity": 0.2,
      "flailing_history": 0.15,
      "resource_availability": 0.1
    }
  },
  "sriracha_army_policy": {
    "version": "1.0.0",
    "description": "Sriracha Army Persona configuration for Big Bottle + Little Bottles architecture",
    "big_bottle_config": {
      "max_concurrent_operations": 10,
      "decision_timeout_ms": 5000,
      "heat_escalation_threshold": 3,
      "authority_levels": ["coordination", "resource_allocation", "strategic_planning"],
      "delegation_strategies": ["specialized_execution", "collaborative_effort", "parallel_processing"]
    },
    "little_bottles_config": {
      "max_instances_per_type": 2,
      "resource_sharing_enabled": true,
      "heat_response_enabled": true,
      "inter_bottle_communication": true,
      "specialization_areas": {
        "think_module": ["analysis", "reasoning", "problem_decomposition"],
        "learning_bot": ["adaptation", "pattern_recognition", "knowledge_synthesis"],
        "guidance_system": ["user_assistance", "workflow_optimization", "recommendations"],
        "webnet_caste": ["information_gathering", "web_navigation", "content_analysis"],
        "float_window": ["ui_coordination", "screen_automation", "interface_optimization"]
      }
    },
    "heat_level_policies": {
      "mild": {
        "cpu_limit_percent": 30,
        "memory_limit_mb": 256,
        "response_time_target_ms": 100,
        "behavior_profile": "gentle_supportive_cautious"
      },
      "medium": {
        "cpu_limit_percent": 50,
        "memory_limit_mb": 512,
        "response_time_target_ms": 50,
        "behavior_profile": "assertive_proactive_optimizing"
      },
      "spicy": {
        "cpu_limit_percent": 70,
        "memory_limit_mb": 1024,
        "response_time_target_ms": 25,
        "behavior_profile": "aggressive_fast_paced_intensive"
      },
      "ghost_pepper": {
        "cpu_limit_percent": 90,
        "memory_limit_mb": 2048,
        "response_time_target_ms": 10,
        "behavior_profile": "maximum_intensity_coordinated"
      }
    },
    "coordination_policies": {
      "inter_bottle_communication": {
        "max_messages_per_second": 10,
        "message_timeout_ms": 1000,
        "broadcast_enabled": true,
        "priority_queuing": true
      },
      "resource_allocation": {
        "fair_sharing": true,
        "priority_based": true,
        "heat_level_scaling": true,
        "overflow_handling": "queue_and_retry"
      },
      "conflict_resolution": {
        "big_bottle_arbitration": true,
        "voting_mechanisms": false,
        "escalation_to_human": true,
        "timeout_based_resolution": true
      }
    }
  },
  "beschooled_principles_config": {
    "version": "1.0.0", 
    "description": "Beschooled BigBottleSriracha principles implementation configuration",
    "educational_framework": {
