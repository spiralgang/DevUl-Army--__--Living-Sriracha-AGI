{
  "defaultAction": "SCMP_ACT_ERRNO",
  "archMap": [
    { "architecture": "SCMP_ARCH_X86_64", "subArchitectures": [ "SCMP_ARCH_X86", "SCMP_ARCH_X32" ] },
    { "architecture": "SCMP_ARCH_AARCH64", "subArchitectures": [ "SCMP_ARCH_ARM" ] }
  ],
  "syscalls": [
    { "names": [ "read", "write", "exit", "exit_group", "rt_sigreturn", "fstat", "mmap", "munmap", "close", "brk", "clock_gettime", "nanosleep", "getpid", "gettid" ], "action": "SCMP_ACT_ALLOW" },
    { "names": [ "socket", "connect", "recvfrom", "sendto", "getsockopt", "setsockopt", "getaddrinfo", "freeaddrinfo" ], "action": "SCMP_ACT_ALLOW" },
    { "names": [ "openat" ], "action": "SCMP_ACT_ALLOW", "args": [ { "index": 2, "value": 0, "op": "SCMP_CMP_MASKED_EQ", "valueTwo": 0 } ] },

    /* Killswitch for risky ops */
    { "names": [ "ptrace", "kexec_load", "kexec_file_load", "init_module", "finit_module", "delete_module", "bpf", "perf_event_open", "keyctl", "add_key", "request_key" ], "action": "SCMP_ACT_KILL_PROCESS" },

    /* Restrict namespace escapes */
    { "names": [ "unshare", "clone3", "clone" ], "action": "SCMP_ACT_ERRNO" },

    /* No filesystem mounting */
    { "names": [ "mount", "umount2", "pivot_root" ], "action": "SCMP_ACT_ERRNO" }
  ]
}