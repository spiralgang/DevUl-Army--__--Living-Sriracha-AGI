<!DOCTYPE html>
<html>
<head>
    <title>NeuronLabs APK Builder</title>
    <style>
        body { background: #000; color: #0f0; font-family: monospace; }
        .container { max-width: 800px; margin: 0 auto; padding: 20px; }
        textarea { width: 100%; height: 200px; background: #111; color: #0f0; border: 1px solid #0f0; }
        button { background: #0f0; color: #000; padding: 10px 20px; border: none; cursor: pointer; }
    </style>
</head>
<body>
    <div class="container">
        <h1>ðŸ§  NeuronLabs APK Builder</h1>
        
        <h3>Java/Kotlin Code:</h3>
        <textarea id="code" placeholder="Paste your MainActivity code here...">
package com.spiralgang.neuronlabs;
import android.app.Activity;
import android.os.Bundle;
import android.widget.*;
import android.graphics.Color;

public class MainActivity extends Activity {
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        
        LinearLayout layout = new LinearLayout(this);
        layout.setOrientation(LinearLayout.VERTICAL);
        layout.setBackgroundColor(Color.BLACK);
        
        TextView title = new TextView(this);
        title.setText("NeuronLabs ACTIVE");
        title.setTextColor(Color.GREEN);
        title.setTextSize(24);
        
        layout.addView(title);
        setContentView(layout);
    }
}
        </textarea>
        
        <button onclick="buildAPK()">Build APK</button>
        <button onclick="downloadTemplate()">Download Project Template</button>
        
        <div id="output"></div>
    </div>
    
    <script>
        function buildAPK() {
            const code = document.getElementById('code').value;
            
            // Create project structure as downloadable zip
            const projectFiles = {
                'MainActivity.java': code,
                'AndroidManifest.xml': `<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spiralgang.neuronlabs">
    <application android:label="NeuronLabs">
        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>`,
                'build.gradle': `apply plugin: 'com.android.application'
android {
    compileSdk 33
    defaultConfig {
        applicationId "com.spiralgang.neuronlabs"
        minSdk 21
        targetSdk 33
    }
}
dependencies {
    implementation 'androidx.appcompat:appcompat:1.6.1'
}`
            };
            
            document.getElementById('output').innerHTML = `
                <h3>âœ… Project Created</h3>
                <p>Use one of these online builders:</p>
                <ul>
                    <li><a href="https://www.apponline.co/" target="_blank">AppOnline.co - Online APK Builder</a></li>
                    <li><a href="https://buildfire.com/" target="_blank">BuildFire - App Builder</a></li>
                    <li><a href="https://build.phonegap.com/" target="_blank">PhoneGap Build</a></li>
                </ul>
                <p>Or upload to GitHub and use Actions (see cloud build script above)</p>
            `;
        }
        
        function downloadTemplate() {
            // Force download of project template
            const element = document.createElement('a');
            element.setAttribute('href', 'data:text/plain;charset=utf-8,' + 
                encodeURIComponent('# Use the cloud build script above'));
            element.setAttribute('download', 'neuronlabs-template.txt');
            element.click();
        }
    </script>
</body>
</html>