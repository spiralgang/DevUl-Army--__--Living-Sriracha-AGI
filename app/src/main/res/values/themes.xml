<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.DevUtilitySrirachaArmy" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/sriracha_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/sriracha_orange</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorSecondary">@color/sriracha_mild</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/sriracha_medium</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="colorTertiary">@color/sriracha_spicy</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/sriracha_ghost_pepper</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/sriracha_ghost_pepper</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@color/white</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/purpleGrey_80</item>
        <item name="colorOnSurfaceVariant">@color/purpleGrey_40</item>
        <item name="colorOutline">@color/purple_40</item>
        <item name="colorOutlineVariant">@color/purpleGrey_80</item>
        <item name="colorSurfaceInverse">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/black</item>
        <item name="colorPrimaryInverse">@color/purple_40</item>
    </style>

    <style name="Theme.DevUtilitySrirachaArmy" parent="Base.Theme.DevUtilitySrirachaArmy" />
    
    <!-- Bot status indicator styles -->
    <style name="BotStatusIndicator">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:background">@drawable/bot_status_circle</item>
    </style>
    
    <!-- Code editor text style -->
    <style name="CodeEditorText">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>