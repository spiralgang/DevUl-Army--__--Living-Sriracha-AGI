<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.DevUtilitySrirachaArmy" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/sriracha_red</item>
        <item name="colorPrimaryDark">@color/sriracha_orange</item>
        <item name="colorAccent">@color/sriracha_mild</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.DevUtilitySrirachaArmy" parent="Base.Theme.DevUtilitySrirachaArmy" />
    
    <!-- Bot status indicator styles -->
    <style name="BotStatusIndicator">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:background">@drawable/bot_status_circle</item>
    </style>
    
    <!-- Code editor text style -->
    <style name="CodeEditorText">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>