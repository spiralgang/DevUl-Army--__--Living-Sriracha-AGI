<?xml version="1.0" encoding="utf-8"?>
<!-- Living Code Integration - Auto-generated symmetrical connections -->
<!-- This file is part of the SrirachaArmy Living Code Environment -->
<!-- Perfect symmetrical integration with all repository components -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions for DeepSeek API and cloud services -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Storage permissions for file management -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" 
        tools:ignore="ScopedStorage" />
    
    <!-- Terminal and SSH permissions -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Screen-hop operations and accessibility -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    
    <!-- FloatWindowWatcher integration -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Wake lock for background operations -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Foreground service for continuous operations -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Hardware Features -->
    <uses-feature android:name="android.hardware.touchscreen" android:required="true" />
    <uses-feature android:name="android.software.live_wallpaper" android:required="false" />

    <application
        android:name=".SrirachaArmyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DevUtilitySrirachaArmy"
        android:hardwareAccelerated="true"
        android:resizeableActivity="true"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="35">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DevUtilitySrirachaArmy"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Accessibility Service for Screen-Hop Operations -->
        <service
            android:name=".accessibility.SrirachaScreenHopService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- FloatWindowWatcher Service -->
        <service
            android:name=".execution.FloatWindowWatcher"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />

        <!-- AI Think Module Service -->
        <service
            android:name=".ai.AIThinkModule"
            android:exported="false" />

        <!-- Work Manager for background tasks -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.spiralgang.srirachaarmy.devutility.androidx-startup"
            android:exported="false"
            tools:node="merge"
            tools:replace="android:authorities">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

    </application>

</manifest>